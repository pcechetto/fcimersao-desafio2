datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

//generator client {
//  provider = "prisma-client-js"
//}

model Asset {
  id     String @id @map("_id")
  symbol String
  orders Order[]
}

model Order {
  id       String      @id @default(auto()) @map("_id") @db.ObjectId
  asset    Asset  @relation(fields: [assetId], references: [id])
  assetId  String
  price    Float
  status   OrderStatus @default(PENDING)
}

enum OrderStatus {
  //OPEN
  PENDING
  //CLOSED
}


